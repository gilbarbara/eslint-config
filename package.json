{
  "name": "@gilbarbara/eslint-config",
  "version": "1.0.1",
  "description": "Opinionated ESLint configuration for modern projects",
  "author": "Gil Barbara <gilbarbara@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gilbarbara/eslint-config.git"
  },
  "bugs": {
    "url": "https://github.com/gilbarbara/eslint-config/issues"
  },
  "homepage": "https://github.com/gilbarbara/eslint-config",
  "type": "module",
  "main": "src/index.js",
  "exports": {
    ".": "./src/index.js",
    "./base": "./src/base.js",
    "./jest": "./src/jest.js",
    "./node": "./src/node.js",
    "./react": "./src/react.js",
    "./testing-library": "./src/testing-library.js",
    "./type-checking": "./src/type-checking.js",
    "./vitest": "./src/vitest.js"
  },
  "files": [
    "src"
  ],
  "keywords": [
    "eslint",
    "config",
    "javascript",
    "typescript",
    "react"
  ],
  "license": "MIT",
  "peerDependencies": {
    "eslint": "9",
    "jest": "29 || 30",
    "prettier": "3",
    "typescript": "5",
    "vitest": "2 || 3 || 4"
  },
  "peerDependenciesMeta": {
    "jest": {
      "optional": true
    },
    "vitest": {
      "optional": true
    }
  },
  "dependencies": {
    "@babel/core": "^7.28.5",
    "@babel/eslint-parser": "^7.28.5",
    "@babel/eslint-plugin": "^7.27.1",
    "@babel/preset-react": "^7.28.5",
    "@eslint/compat": "^2.0.0",
    "@vitest/eslint-plugin": "^1.4.4",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import-x": "^4.16.1",
    "eslint-plugin-jest": "^29.2.1",
    "eslint-plugin-jest-dom": "^5.5.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-n": "^17.23.1",
    "eslint-plugin-perfectionist": "^4.15.1",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-compiler": "^19.1.0-rc.2",
    "eslint-plugin-react-hooks": "7.0.0",
    "eslint-plugin-react-refresh": "^0.4.24",
    "eslint-plugin-regexp": "^2.10.0",
    "eslint-plugin-sort-destructure-keys": "^2.0.0",
    "eslint-plugin-testing-library": "^7.13.5",
    "eslint-plugin-unicorn": "^62.0.0",
    "eslint-plugin-unused-imports": "^4.3.0",
    "globals": "^16.5.0",
    "typescript-eslint": "^8.47.0"
  },
  "devDependencies": {
    "@gilbarbara/prettier-config": "^1.0.0",
    "@types/react": "^19.2.7",
    "@vitest/coverage-v8": "^4.0.13",
    "eslint": "^9.39.1",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "prettier": "^3.6.2",
    "prop-types": "^15.8.1",
    "react": "^19.2.0",
    "repo-tools": "^0.3.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.13"
  },
  "scripts": {
    "lint": "eslint --fix src test",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest watch",
    "validate": "pnpm run lint && pnpm run test:coverage",
    "prepare": "husky",
    "prepublishOnly": "pnpm run validate"
  },
  "prettier": "@gilbarbara/prettier-config"
}
